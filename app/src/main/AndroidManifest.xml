<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opensource13.pillsogood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pillsogood">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/button_information" />

        <activity android:name=".SetalarmActivity" />
        <activity android:name=".DaydruglistActivity" />
        <activity android:name=".MydrugActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".Introscreen" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>